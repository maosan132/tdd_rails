

<div class="row">
  <div id="registration" class="col-md-6">
  <h1>Registration</h1>
  <%= form_for @user do |f| %>
    <div class="form_group">
      <%= f.label :name %>:
      <%= f.text_field :name %>
    </div>
    <div class="form_group">
      <%= f.label :email %>:
      <%= f.email_field :email %>
    </div>
    <div class="form_group">
      <%= f.label :password %>:
      <%= f.password_field :password %>
    </div>
    <div class="form_group">
      <%= f.label :password_confirmation %>:
      <%= f.password_field :password_confirmation %>
    </div>
    <%= f.submit %>
  <% end %>
  </div>
    <div id="login" class="col-md-6">
  <h1>Login</h1>
  </div>
</div>

